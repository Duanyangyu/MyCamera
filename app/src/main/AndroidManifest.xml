<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duanyy.mycamera">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyCameraActivity" />
        <activity android:name=".PictureActivity" />
        <activity android:name=".cube.CubeActivity" />
        <activity android:name=".cube.CubeActivity1" />
        <activity android:name=".cube.CubeActivity2" />
        <activity android:name=".framebuffer.BufferActivity" />
        <activity android:name=".media.audio.AudioRecordActivity"></activity>
    </application>

</manifest>