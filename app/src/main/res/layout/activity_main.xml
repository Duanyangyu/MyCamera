<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.duanyy.mycamera.MainActivity">



    <Button
        android:id="@+id/mBtnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Camera"/>

    <Button
        android:id="@+id/mBtnPicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Picture"/>

    <Button
        android:id="@+id/mBtnBuffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FrameBuffer"/>

    <Button
        android:id="@+id/mBtnCube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cube"/>

    <Button
        android:id="@+id/mBtnCubeViewMatrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cube ViewMatrix"/>

    <Button
        android:id="@+id/mBtnCubeProjectionMatrix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cube ProjectionMatrix"/>

</LinearLayout>
